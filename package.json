{
  "name": "oh-my-ag-workspace",
  "private": true,
  "workspaces": [
    "cli",
    "web"
  ],
  "scripts": {
    "build": "bun run --cwd cli build",
    "dev": "bun run --cwd cli dev",
    "lint": "bun run --cwd cli lint && bun run --cwd web lint",
    "test": "bun run --cwd cli test",
    "web:dev": "bun run --cwd web dev",
    "web:build": "bun run --cwd web build",
    "web:lint": "bun run --cwd web lint"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.13"
  }
}
